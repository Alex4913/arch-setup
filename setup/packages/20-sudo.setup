#!/bin/bash
# 20-sudo.setup
# aoneill - 03/09/16

# Source the driver
source "$(basename "$(pwd)").sh"
source_stage "prep" all

function init() {
  section sudo
  
  folder="$(get_folder "$0")"

  echo "cp $folder/* /etc/sudoers.d/"
  cp $folder/* /etc/sudoers.d/
} 

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
