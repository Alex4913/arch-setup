#!/bin/bash
# 20-slim.setup
# aoneill - 01/15/16

# Source the driver
source "$(basename "$(pwd)").sh"
source_stage "prep" all

function init() {
  section SLiM
  
  folder="$(get_folder "$0")"

  echo "cp \"$folder/slim.conf\" \"/etc/slim.conf\""
  cp "$folder/slim.conf" "/etc/slim.conf"
  systemctl enable slim.service
} 

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
