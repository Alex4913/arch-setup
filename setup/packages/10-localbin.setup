#!/bin/bash
# 10-localbin.setup
# aoneill - 01/15/16

# Source the driver
source "$(basename "$(pwd)").sh"

function init() {
  section Localbin

  folder=$(get_folder "$0")
  localbin=/usr/local/bin/

  echo "cp -r $(pwd)/$folder/* $localbin"
  cp -r $(pwd)/$folder/* $localbin
}

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
