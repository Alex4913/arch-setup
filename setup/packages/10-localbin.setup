#!/bin/bash
# 10-localbin.setup
# aoneill - 01/15/16

# Location of this script
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

function init() {
  # Source the driver
  source "$DIR/$(basename "$DIR").sh"

  section Localbin

  folder="$DIR/$(pack_folder "$0")"
  localbin=/usr/local/bin/

  tell cp -r $folder/* $localbin
}

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
