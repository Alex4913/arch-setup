#!/bin/bash
# 20-ntp.setup
# aoneill - 04/21/16

# Location of this script
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

function init() {
  # Source the driver
  source "$DIR/$(basename "$DIR").sh"

  section "Time and Date"
  
  tell systemctl enable ntpd.service
  tell timedatectl set-timezone UTC
} 

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
