# Source the driver
source "$(basename "$(pwd)").sh"

function init() {
  section "Time and Date"
  
  echo "systemctl enable ntpd.service"
  systemctl enable ntpd.service
  
  echo "timedatectl set-timezone UTC"
  timedatectl set-timezone UTC
} 

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
