#!/bin/bash
# 20-slim.setup
# aoneill - 01/15/16

EXEC=$(test "$_" != "$0"; echo $?)
SUPPORT="$1"
GLOBALS="$2"

source "$GLOBALS"

# Use utilities here
source "$SUPPORT/*-passwords"
source "$SUPPORT/*-accounts"

function init() {
  section SLiM
  
  folder="$(get_folder "$0")"

  cp "$folder/slim.conf" "/etc/slim/conf"
  systemctl enable slim.service
} 

[[ "$EXEC" == "1" ]] && init
