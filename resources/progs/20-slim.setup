#!/bin/bash
# 20-slim.setup
# aoneill - 01/15/16

SUPPORT="$CWD/support"
GLOBALS="$SUPPORT/globals"

source "$GLOBALS"

# Use utilities here
source $(expand_glob "$SUPPORT/*-passwords")
source $(expand_glob "$SUPPORT/*-accounts")

function init() {
  section SLiM
  
  folder="$(get_folder "$0")"

  echo "cp \"$folder/slim.conf\" \"/etc/slim.conf\""
  cp "$folder/slim.conf" "/etc/slim.conf"
  systemctl enable slim.service
} 

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
