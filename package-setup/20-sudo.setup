#!/bin/bash
# 20-sudo.setup
# aoneill - 03/09/16

PRE_DIR="$CWD/pre-setup"
GLOBALS="$PRE_DIR/globals"

source "$GLOBALS"

# Use utilities here
source $(expand_glob "$PRE_DIR/*-passwords")
source $(expand_glob "$PRE_DIR/*-accounts")

function init() {
  section sudo
  
  folder="$(get_folder "$0")"

  echo "cp $folder/groups.conf /etc/sudoers.d/"
  cp $folder/* /etc/sudoers.d/
} 

EXEC=$(test "${BASH_SOURCE[0]}" != "${0}"; echo $?)
[[ "$EXEC" == "1" ]] && init $@
