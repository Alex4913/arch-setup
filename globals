export RESOURCES="/root/arch-setup/resources"
export PASSWD_FILE=/tmp/tmp.hgrg0fOc0T
export HOMEDIR_FILE=/tmp/tmp.z4LQIkxnLf
export WIFI_IFACE_FILE=/tmp/tmp.gQfhXTrsJ0
export PROGS="$RESOURCES/progs"
export GLOBAL_LOCK="$RESOURCES/.global_lock"

function section() {
  in=$1
  cols=80
  textStart=$((($cols - ${#in}) / 2 - 1))

  head=$(printf "%-${cols}s" "#")
  echo "${head// /\#}"
  printf "#%*s" $textStart " "
  echo -n $in
  printf "%*s\n" $(($cols - $textStart - ${#in} - 1)) "#"
  echo "${head// /\#}"
}

function get_folder() {
  basename "$1" | sed -e "s/^[0-9]*-//g" | sed -e "s/\.[a-zA-Z0-9]*$//g"
}

function expand_glob() {
  list=($1)
  echo "${list[@]}"
}
